<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= bootstrap_form_for @serch_form,:url => root_path,
      :html => {:class => "text-center"},method: :get do |s| %>
      <%= s.select :address,$ward %>
      <%= s.submit "検索" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="text-center">
    <% @shop.each do |s| %>
      <div class="shop-list">
        <div class="shop-name">
          <label> 店舗名: </label>
          <%= s.name %>
        </div>
        <div class="shop-ward">
          <label> 区: </label>
           <%= s.address %>
        </div>
        <div class="shop-price">
          <label> 価格帯: </label>
          <%= s.price %>
        </div>
        <div class="shop-genre">
          <label> ジャンル: </label>
          <%= s.genre %>
        </div>
        <% if s.url != "" && !s.url.nil? %>
          <div class="shop-url">
            <%= link_to "Webサイト",s.url %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
